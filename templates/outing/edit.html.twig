{% extends 'base.html.twig' %}

{% block title %}Edit Outing{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.dateTimeStart) }}
                {{ form_row(form.registrationDeadline) }}
                {{ form_row(form.nbRegistrationMax) }}
                {{ form_row(form.duration) }}
                {{ form_row(form.infoOuting) }}
            </div>
            <div class="col-6">
                <h5>Mon Campus</h5>
                <h5>{{ app.user.campus }}</h5>

                <br>
                {{ form_row(form.city) }}
                {{ form_row(form.location)}}

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <button type="submit" class="btn btn-info">
                    Modifier La Sortie
                </button>
                {{ form_end(form) }}
            </div>
            <div class="col-4">
                <a class="btn btn-info" href="{{ path('app_outing_index') }}">Annuler</a>
            </div>
            <div class="col-4">
                {{ include('outing/_delete_form.html.twig') }}
            </div>
        </div>
    </div>



{% endblock %}
